<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    tools:context=".DisplayEvents">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_EventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_EventTime"
                android:text="Event Time"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tv_HostID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_HostID"
                android:text="HostID"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tv_UserID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_UserID"
                android:text="UserID"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tv_LocationNbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_LocationNbr"
                android:text="Location#"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tv_RouteNbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_RouteNbr"
                android:text="Route#"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/tv_Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_Day"
                android:text="Day"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/tv_Logger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_Logger"
                android:text="Logger"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/tv_EventNbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_EventNbr"
                android:text="EventNbr"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/tv_AddtlDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_AddtlDesc"
                android:text="AddtlDesc"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/tv_AddtlNbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_AddtlNbr"
                android:text="Addtl#"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/et_EventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="82dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:ems="10"
                android:inputType="text"/>

            <EditText
                android:id="@+id/et_HostID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="82dp"
                app:layout_constraintTop_toBottomOf="@+id/et_EventTime"
                android:ems="10"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_UserID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="82dp"
                app:layout_constraintTop_toBottomOf="@+id/et_HostID"
                android:ems="10"
                android:inputType="text">
                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/et_LocationNbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="82dp"
                app:layout_constraintTop_toBottomOf="@+id/et_UserID"
                android:ems="10"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_RouteNbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="82dp"
                app:layout_constraintTop_toBottomOf="@+id/et_LocationNbr"
                android:ems="10"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="82dp"
                app:layout_constraintTop_toBottomOf="@+id/et_RouteNbr"
                android:ems="10"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_Logger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="82dp"
                app:layout_constraintTop_toBottomOf="@+id/et_Day"
                android:ems="10"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_EventNbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="82dp"
                app:layout_constraintTop_toBottomOf="@+id/et_Logger"
                android:ems="10"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_AddtlDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="82dp"
                app:layout_constraintTop_toBottomOf="@+id/et_EventNbr"
                android:ems="10"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_AddtlNbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="82dp"
                app:layout_constraintTop_toBottomOf="@+id/et_AddtlDesc"
                android:ems="10"
                android:inputType="text" />

            <Button
                android:id="@+id/btn_Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="82dp"
                app:layout_constraintTop_toBottomOf="@+id/et_AddtlNbr"
                android:onClick="run"
                android:text="@string/save" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>